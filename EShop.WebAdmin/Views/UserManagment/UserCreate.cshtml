@model UserViewModel
@{
    ViewData["Title"] = "Istifadəçi yaratmaq";
}

<div class="layout-px-spacing">

    <div class="row layout-top-spacing">

        <form method="post" enctype="multipart/form-data" class="mt-3 my-5">

            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label"></label>
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="GenderId" class="control-label"></label>

                        @Html.DropDownListFor(m => m.GenderId,  Helper.GetEnumSelectList<GenderType>(), "Cinsiyyet seçin", new { @class = "form-control" })
                 


                        <span asp-validation-for="GenderId" class="text-danger"></span>
                    </div>
                </div>


                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
       

            </div>
            <div class="row">

                <div class="col-md-6 control-label">
                    @Html.ActionLink("Listə Geri Dön", "UserIndex", "UserManagment", null, new { @class = "btn btn-primary btn-lg btn-block" })

                </div>
                <div class="col-md-6 control-label">
                    <input id="frmProduct" type="submit" value="Yarat" class="btn btn-primary btn-lg btn-block" tabindex="16" />

                </div>

            </div>

        </form>

    </div>
</div>

