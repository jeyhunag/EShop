@model ProductDto
@{
    ViewData["Title"] = "Create";
}

<div class="layout-px-spacing">

    <div class="row layout-top-spacing">

        <form method="post"  enctype="multipart/form-data" class="mt-3 my-5">

            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="ProductCategoryId" class="control-label"></label>

                        <select asp-for="ProductCategoryId"
                                class="form-control"
                                asp-items="@(new SelectList(Model.CategoryDtos, nameof(ProductCategoryDto.Id), nameof(ProductCategoryDto.Name)))">
                            <option>Please select one</option>
                        </select>

                        <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Marka" class="control-label"></label>
                        <input asp-for="Marka" class="form-control" />
                        <span asp-validation-for="Marka" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Model" class="control-label"></label>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="UnitOfPrice" class="control-label"></label>
                        <input asp-for="UnitOfPrice" class="form-control" />
                        <span asp-validation-for="UnitOfPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="TotalCount" class="control-label"></label>
                        <input asp-for="TotalCount" class="form-control" />
                        <span asp-validation-for="TotalCount" class="text-danger"></span>
                    </div>
                </div>
            
                <div class="col-8">
                    <div class="col-4">
                        <div class="form-group">
                            <label asp-for="@Model.ProfileDocPath" class="control-label"></label>
                            <input type="file" name="files" class="form-control" multiple  />
                            <span asp-validation-for="@Model.ProfileDocPath" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            </div>
            <div class="row">

                <div class="col-md-6 control-label">
                    @Html.ActionLink("Listə Geri Dön", "Index", "Products", null, new { @class = "btn btn-primary btn-lg btn-block" })

                </div>
                <div class="col-md-6 control-label">
                    <input id="frmProduct" type="submit" value="Yarat" class="btn btn-primary btn-lg btn-block" tabindex="16" />

                </div>

            </div>

        </form>

    </div>
</div>

